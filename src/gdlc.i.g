r_dot_indexable_expr [DotAccessDescT* aD] returns [BaseGDL* res] // 1st
{
    res=NULL;
	switch ( _t->getType()) {
	case EXPR:
	{
		ProgNodeP tIn = _t;
		_t = _t->getFirstChild();
		//res=expr(_t);
        res = _t->Eval();
		aD->SetOwner( true);
		_retTree = tIn->getNextSibling();
